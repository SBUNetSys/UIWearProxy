<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--set card background image:
            cardScrollView.setBackground(drawable);// drawable from bitmap/res etc.
    -->
    <android.support.wearable.view.CardScrollView android:id="@+id/card_scroll_view"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@drawable/song" app:layout_box="bottom">

        <android.support.wearable.view.CardFrame android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="bottom">

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:onClick="onClick" android:orientation="vertical">

                <!--set card icon (e.g., play button):
                title.setCompoundDrawablesRelativeWithIntrinsicBounds(0, 0, R.drawable.ic_media_pause,0);
                -->

                <!-- set card title
                title.setText(text);
                -->
                <TextView android:id="@+id/title" style="@style/CardTitle"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:drawablePadding="4dp" android:text="Album Name to Display" />

                <!-- set card text
                text.setText(text);
                -->
                <TextView android:id="@+id/text" style="@style/CardText"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="A Song Name" />

            </LinearLayout>
        </android.support.wearable.view.CardFrame>
    </android.support.wearable.view.CardScrollView>
</android.support.wearable.view.BoxInsetLayout>
